<!DOCTYPE html>
<html>
    <head>
        <title>{{title}}</title>
    </head>
    <body>
        <h1>Create A User</h1>
        <form action="/api/user" method="POST">
            <input type="text" name="username" placeholder="Username"/><br/>
            <input type="text" name="password" placeholder="Password"/><br/>
            <input type="submit" value="Create User" />
        </form>
    </body>

</html>

extends layout

block content
    h1 = title
    form